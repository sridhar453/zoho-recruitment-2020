package tests;
 public class main {
	public static void main(String args[])
     {
    int num = 4;
   
	int k = num;
	int space = num * 2 ;
	int i,count=0,val=1,m=1;
	while(k>0)
	{
		for(i=0;i<space;i++)
		{
			System.out.print("  ");
		}
		space = space - 2 ;
		if(count == 0)
		{
			for(i=m;i<(num+m);i++)
			{
				 System.out.print(+i);
				val += 1 ;
			}
			count = 1 ;
			m = val-1;
		}


		else
		{
			
			for(i=(m+num);i>(m);i--)
			{
				System.out.print(+i);
			}
			val = val+ num;
			m = val ;
			count = 0;
		}
		System.out.println(" ");
		k = k - 1 ;

	}
	

}
    
}
