#include<stdio.h>
int main()
{
	int num;
	printf("Enter the number");
	scanf("%d",&num);
	int k = num;
	int space = num * 2 ;
	int i,count=0,val=1,m=1;
	while(k>0)
	{
		for(i=0;i<space;i++)
		{
			printf("  ");
		}
		space = space - 2 ;
		if(count == 0)
		{
			for(i=m;i<(num+m);i++)
			{
				printf("%d ",i);
				val += 1 ;
			}
			count = 1 ;
			m = val-1;
		}


		else
		{
			
			for(i=(m+num);i>(m);i--)
			{
				printf("%d ",i);
			}
			val = val+ num;
			m = val ;
			count = 0;
		}
		printf("\n");
		k = k - 1 ;

	}


}
